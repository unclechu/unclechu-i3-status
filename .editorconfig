root = true

[*]
max_line_length = 80

[*.{hs,cabal,yaml,nix,project}]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,pl}]
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[LICENSE]
max_line_length = 78
